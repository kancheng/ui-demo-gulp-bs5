<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top navbar-border">
      <div class="container">
        <h1 class="logo">
          <a class="navbar-brand" href="index-coding-w6.html"><img src="assets/images/img-w6/logo.svg" alt="logo">Coding home</a>
          </h1>
        <button class="navbar-toggler link-primary" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
          aria-label="Toggle navigation">
          <span class=""></span>
          <span class="material-symbols-outlined text-primary align-bottom">
            drag_handle
          </span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 text-center">
                <li class="nav-item">
                    <a class="nav-link h5 me-lg-6" aria-current="page" href="index-coding-w6.html">首頁</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h5 me-lg-6" href="course-list.html">課程介紹</a>
                </li>
